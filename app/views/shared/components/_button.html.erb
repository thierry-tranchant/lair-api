<%
  link ||= nil
  text ||= 'Cliquer ici'
  klasses ||= ''
  content_tag = link ? :a : :button
%>

<%= 
  content_tag(
    content_tag,
    text,
    class: '
      card
      text-not-underlined
      color-black
      filled-turquoise
      padding-left-xxs
      padding-right-xxs
      padding-top-xxs
      padding-bottom-xxs
      font-size-m 
    ' + klasses,
    href: link,
  )
%>
